<h2 class="q_head">Round: <%= @turn %> - Player: <%= @user.user_name %> - Score: <%= @score %></h2>
<h2 class="cat">Category: <%= @cat %> - Value: <%= @value %></h2>
<br>
<h1 class="question">Question: <%= @question %><h2>
<br>
<% @answers.shuffle.each do |answer| %>
    <%= form_with url: guess_path(@game.id) do |f| %>
        <%= f.hidden_field :correct, value: answer[1] %>
        <%= f.submit answer[0], class: "q_btn" %>
    <%end%><br>
<%end%>
<br><br>
<%= button_to "Back", categories_path(@game), method: :get, class: "signup_btn" %>