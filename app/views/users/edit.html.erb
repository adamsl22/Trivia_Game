<h1>Edit Profile</h1>
<%= form_for @user do |f| %>
    <%= f.label :user_name, "Username" %>
    <%= f.text_field :user_name %>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><br>

    <%= f.label :blurb, "Add/Edit a Blurb" %>
    <%= f.text_area :blurb %><br>
  
    <%= f.submit "Save Changes"%>
  <% end %>
  <% if @errors %>
    <% @errors.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>